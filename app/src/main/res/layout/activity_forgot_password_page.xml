<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ForgotPasswordPage"
        android:orientation="vertical"
        android:gravity="center_horizontal">

    <Space
            android:layout_width="match_parent"
            android:layout_height="50dp" />

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textSize="50sp" />

    <Space
            android:layout_width="match_parent"
            android:layout_height="100dp" />

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/forgot_username_field"
                android:hint="username"
                android:layout_margin="5dp" />

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/forgot_old_password_field"
                android:hint="old password"
                android:layout_margin="5dp" />

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/forgot_new_password_field"
                android:hint="new password"
                android:layout_margin="5dp" />

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/forgot_conf_new_password_field"
                android:hint="confirm new password"
                android:layout_margin="5dp" />
    </LinearLayout>

    <Space
            android:layout_width="match_parent"
            android:layout_height="100dp" />

    <Button
            android:text="Update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/update_creds_button"
            android:textSize="30sp" />

    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/forgot_result_text" />
</LinearLayout>